@model PhotoBucket.Entities.UserInfo

<div>
    <h4>UserInfo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Avatar)
        </dt>
    </dl>
    <img src="@Model.Avatar" width="100" />
    <a href="/Home/GetUserFile?id=@Model.Id">Скачать информационный файл</a>
    <form action="/Home/AddPhoto" method="post" enctype="multipart/form-data">
        <input value="@Model.Id" name="id" type="hidden" />
        <input type="file" multiple name="photos" />
        <input type="submit" value="сохранить фотографии" />
    </form>
</div>

@foreach (PhotoBucket.Entities.UserPhoto photo in Model.Photos)
{
    <img src="/Photos/@Model.Username/@photo.Filename"/>
}
